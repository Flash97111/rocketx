<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>RocketX</title>
  <link rel="icon" href="/assets/favicon.png" type="image/x-icon">
  <link rel="stylesheet" type="text/css" href="master.css">
  <link rel="stylesheet" href="/assets/font-awesome-4.7.0/css/font-awesome.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="master.js"></script>
</head>
<body>

  <section>
    <div class="__wrapper">
      <div class="__header">
      <span onclick="window.location='/'" class="logo">RocketX - #ROCKETX</span>
        {% if currentUser %}
        <div onclick="location.href='/play'" class="__new_game">PLAY</div>
        <div class="__current_user">
          <span class="__current_user_label">Welcome:</span><span class="__current_user_name">{{currentUser.username}}</span>
          <div id="__usermenu" class="__usermenu_dropdown">
            <a href="#">My Profile</a>
            <a href="/messages">Messages</a>
            <a href="/logout">Logout</a>
          </div>
        </div>
        {% else %}
      <div class="__login">
      <form id="__login_form" action="/login" method="post">
        {{ csrfField }}
        <input id="__login_email_field" class="__login_field" type="text" name="email" placeholder="Email">
        <input id="__login_password_field" class="__login_field" type="password" name="password" placeholder="Password">
        <input id="__login_button" class="__login_button" type="submit" value="Login">
      </form>
        <div id="__login_error" class="__login_popup top"></div>
      </div>
        {% endif %}
      </div>
      <div class="__placeholder"></div>
      {% block content %}{% endblock %}

      {% block footer %}
        <div class="__footer">
          <ul>
            <li>
              <a href="/about">Author</a>
            </li>
            <li>
              <a href="https://github.com/Gerike/jatekfejlesztes_bead/" target="_blank">Github repository </a>
            </li>
            <li>
                <a href="/api" target="_blank">Public API</a>
            </li>
          </ul>
        </div>
      {% endblock %}
    </div>
  </section>

</body>
</html>
