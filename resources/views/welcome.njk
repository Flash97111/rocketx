{% extends 'master' %}

{% block content %}
<link rel="stylesheet" type="text/css" href="welcome.css">
<article class="article welcome_article">
  <h1>Welcome at RocketX, a new arcade shooter's home</h1>
  <h2>We hope you will enjoy yourself here</h2>
</article>
<article class="article article1">
  <h1>TOP SCORES</h1>
  <table id="highscores">
    <tr class="highscore_row highscore_row_first">
      <td class="name">PLAYER1</td>
      <td class="point">1000</td>
    </tr>
    <tr class="highscore_row highscore_row_second">
      <td class="name">PLAYER2</td>
      <td class="point">900</td>
    </tr>
    <tr class="highscore_row highscore_row_third">
      <td class="name">PLAYER3</td>
